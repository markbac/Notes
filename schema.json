{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "output_directory": {"type": "string"},
    "document_name": {"type": "string"},
    "document_version": {"type": "string"},
    "author": {"type": "string"},
    "merge_files": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file_name": {"type": "string"},
          "document_number": {"type": "string"},
          "document_name": {"type": "string"},
          "category": {"type": "string"},
          "sub_category": {"type": "string", "default": "example"},
          "merge": {"type": "boolean", "default": true},
          "watermark_present": {"type": "boolean", "default": false},
          "add_toc": {"type": "boolean", "default": false},
          "add_bookmarks": {"type": "boolean", "default": false},
          "display_page_number": {"type": "boolean", "default": false},
          "page_layout": {"enum": ["single", "continuous", "two-column-right", "two-column-left", "two-page-right", "two-page-left"], "default": "single"},
          "page_mode": {"enum": ["none", "use-outlines", "use-thumbs", "full-screen", "use-oc"], "default": "none"}
        },
        "required": ["file_name", "category"],
        "additionalProperties": false
      }
    },
    "category_order": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "required": ["merge_files"],
  "additionalProperties": false
}
